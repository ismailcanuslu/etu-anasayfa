@model IQueryable<ETUAnaSayfa.Models.Home.Contact>
@{
    ViewData["Title"] = "İletişim -";
}

<div class="contact-page-hero">
    <div class="container">
        <h1>İletişim</h1>
        <nav aria-label="breadcrumb" class="contact-breadcrumb-nav">
            <ol class="contact-breadcrumb">
                <li class="contact-breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="contact-breadcrumb-item separator">/</li>
                <li class="contact-breadcrumb-item active">İletişim</li>
            </ol>
        </nav>
    </div>
</div>

<section class="contact-page-section">
    <div class="container">
        <div class="row">
            <!-- İletişim Bilgileri -->
            <div class="col-lg-4">
                <div class="contact-page-info">
                    <h2>İletişim Bilgileri</h2>
                    @foreach (var contact in Model)
                    {
                        <div class="contact-info-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <h3>Adres</h3>
                                <p>@contact.Address</p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <h3>E-posta</h3>
                                <p>@contact.Email</p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <i class="fas fa-phone-alt"></i>
                            <div>
                                <h3>Telefon</h3>
                                <p>@contact.Phone</p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <i class="fas fa-envelope-open-text"></i>
                            <div>
                                <h3>KEP Adresi</h3>
                                <p>@contact.KepEmail</p>
                            </div>
                        </div>
                    }
                    <div class="contact-social-links">
                        <a href="#" class="contact-social-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="contact-social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="contact-social-link"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="contact-social-link"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="contact-social-link"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>

            <!-- İletişim Formu -->
            <div class="col-lg-8">
                <div class="contact-page-form">
                    <h2>İletişim Formu</h2>
                    <form id="contactForm" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Ad Soyad</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">E-posta</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="subject">Konu</label>
                            <select class="form-control" id="subject" name="subject" required>
                                <option value="" disabled selected>Seçiniz</option>
                                <option value="bilgi">Bilgi Talebi</option>
                                <option value="oneri">Öneri</option>
                                <option value="sikayet">Şikayet</option>
                                <option value="diger">Diğer</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="message">Mesajınız</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>
                        <div class="form-group">
                            <div class="contact-form-check">
                                <input class="form-check-input" type="checkbox" id="kvkk" required>
                                <label class="form-check-label" for="kvkk">
                                    KVKK metnini okudum ve kabul ediyorum.
                                </label>
                            </div>
                        </div>
                        <div class="g-recaptcha" data-sitekey="YOUR_SITE_KEY"></div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Harita Bölümü -->
<section class="contact-map-section">
    <div class="contact-map-container">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3060.0723769659585!2d41.23309697565147!3d39.91739647152433!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x406e5c29da58ec23%3A0xc1124571e6bfadbd!2sErzurum%20Teknik%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1736164893691!5m2!1str!2str"
            width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}

@section Scripts {
    <script src="~/js/contact.js" asp-append-version="true"></script>
}
