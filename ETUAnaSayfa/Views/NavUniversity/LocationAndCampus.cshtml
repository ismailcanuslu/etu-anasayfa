@{
    ViewData["Title"] = "Konum ve Yerleşke -";
}

@section Styles {
    <link rel="stylesheet" href="~/css/location.css" asp-append-version="true" />
}

<!-- Hero Section -->
<div class="location-page-hero">
    <div class="container">
        <h1>Konum ve Yerleşke</h1>
        <nav class="location-breadcrumb-nav">
            <ol class="location-breadcrumb">
                <li><a href="/">Ana Sayfa</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li><a href="#">Üniversite</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li>Konum ve Yerleşke</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Main Content -->
<div class="location-content">
    <div class="container-fluid">
        <div class="map-container">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m12!1m8!1m3!1d48959.70772097417!2d41.233508!3d39.919425!3m2!1i1024!2i768!4f13.1!2m1!1serzurum%20Teknik%20%C3%BCniversitesi!5e0!3m2!1str!2sus!4v1736283999102!5m2!1str!2sus"
                width="100%" height="700" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
        <div class="location-info">
            <div class="address-card">
                <i class="fas fa-map-marker-alt"></i>
                <h3>Adres</h3>
                <p>Erzurum Teknik Üniversitesi</p>
                <p>Havaalanı Yolu Cad. No:53</p>
                <p>Yakutiye/ERZURUM</p>
            </div>
        </div>
