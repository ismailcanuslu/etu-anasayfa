@{
    ViewData["Title"] = "Üniversite Logosu -";
}

@section Styles {
    <link rel="stylesheet" href="~/css/university-logo.css" asp-append-version="true" />
}

<!-- Hero Section -->
<div class="logo-page-hero">
    <div class="container">
        <h1>Üniversite Logosu</h1>
        <nav class="logo-breadcrumb-nav">
            <ol class="logo-breadcrumb">
                <li><a href="/">Ana Sayfa</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li><a href="#">Üniversite</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li>Üniversite Logosu</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Main Content -->
<div class="logo-content">
    <div class="container">
        <!-- Logo Variants Section -->
        <div class="logo-variants">
            <!-- Square Logo Section -->
            <div class="logo-section">
                <h2>Kare PNG</h2>
                <div class="logo-card">
                    <div class="logo-image">
                        <img src="https://erzurum.edu.tr/Content/etugeneldosyalar/38d89f92-299b-4d64-b427-d2e0f1502be6.png"
                            alt="ETÜ Kare Logo PNG">
                    </div>
                    <div class="logo-download">
                        <a href="https://erzurum.edu.tr/Content/etugeneldosyalar/38d89f92-299b-4d64-b427-d2e0f1502be6.png"
                            download class="download-btn">
                            <i class="fas fa-download"></i> İndir
                        </a>
                    </div>
                </div>
            </div>

            <!-- Square Logo JPG -->
            <div class="logo-section">
                <h2>Kare JPG</h2>
                <div class="logo-card">
                    <div class="logo-image">
                        <img src="https://erzurum.edu.tr/Content/etugeneldosyalar/0c1eed6a-e2af-4604-8a19-0bac26250f08.jpg"
                            alt="ETÜ Kare Logo JPG">
                    </div>
                    <div class="logo-download">
                        <a href="https://erzurum.edu.tr/Content/etugeneldosyalar/0c1eed6a-e2af-4604-8a19-0bac26250f08.jpg"
                            download class="download-btn">
                            <i class="fas fa-download"></i> İndir
                        </a>
                    </div>
                </div>
            </div>

            <!-- Circular Logo JPG -->
            <div class="logo-section">
                <h2>Dairesel JPG</h2>
                <div class="logo-card">
                    <div class="logo-image">
                        <img src="https://erzurum.edu.tr/Content/etugeneldosyalar/f91555e1-be6f-4cb3-8535-4f713b243f08.jpg"
                            alt="ETÜ Dairesel Logo JPG">
                    </div>
                    <div class="logo-download">
                        <a href="https://erzurum.edu.tr/Content/etugeneldosyalar/f91555e1-be6f-4cb3-8535-4f713b243f08.jpg"
                            download class="download-btn">
                            <i class="fas fa-download"></i> İndir
                        </a>
                    </div>
                </div>
            </div>

            <!-- Circular Logo PNG -->
            <div class="logo-section">
                <h2>Dairesel PNG</h2>
                <div class="logo-card">
                    <div class="logo-image">
                        <img src="https://erzurum.edu.tr/Content/etugeneldosyalar/ce86c82d-6f1e-463f-83bd-529f7becec8f.png"
                            alt="ETÜ Dairesel Logo PNG">
                    </div>
                    <div class="logo-download">
                        <a href="https://erzurum.edu.tr/Content/etugeneldosyalar/ce86c82d-6f1e-463f-83bd-529f7becec8f.png"
                            download class="download-btn">
                            <i class="fas fa-download"></i> İndir
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logo Usage Guidelines -->
        <div class="logo-guidelines">
            <h2>Logo Kullanım Kılavuzu</h2>
            <div class="guidelines-content">
                <div class="guideline-item">
                    <i class="fas fa-check-circle"></i>
                    <p>Logo orijinal renk ve oranlarında kullanılmalıdır.</p>
                </div>
                <div class="guideline-item">
                    <i class="fas fa-check-circle"></i>
                    <p>Logo üzerinde deformasyon yapılmamalıdır.</p>
                </div>
                <div class="guideline-item">
                    <i class="fas fa-check-circle"></i>
                    <p>Kurumsal kimlik kılavuzuna uygun kullanılmalıdır.</p>
                </div>
                <div class="guideline-item">
                    <i class="fas fa-exclamation-circle"></i>
                    <p>Logonun ticari amaçla kullanımı için izin alınması gerekmektedir.</p>
                </div>
            </div>
        </div>
    </div>
</div>
