@{
    ViewData["Title"] = "Vizyon ve Misyon -";
}

@section Styles {
    <link rel="stylesheet" href="~/css/vision.css" asp-append-version="true" />
}

<!-- Hero Section -->
<div class="vision-page-hero">
    <div class="container">
        <h1>Vizyon ve Misyon</h1>
        <nav class="vision-breadcrumb-nav">
            <ol class="vision-breadcrumb">
                <li><a href="/">Ana Sayfa</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li><a href="#">Üniversite</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li>Vizyon ve Misyon</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Main Content -->
<div class="vision-content">
    <div class="container">
        <div class="vision-mission-grid">
            <!-- Vizyon Card -->
            <div class="vision-card">
                <div class="card-icon">
                    <i class="fas fa-eye"></i>
                </div>
                <h2>Vizyonumuz</h2>
                <div class="card-content">
                    <p>"İnsanlığa değer katan öncü ve saygın bir üniversite olmaktır."</p>
                </div>
            </div>

            <!-- Misyon Card -->
            <div class="mission-card">
                <div class="card-icon">
                    <i class="fas fa-bullseye"></i>
                </div>
                <h2>Misyonumuz</h2>
                <div class="card-content">
                    <ul>
                        <li>
                            <i class="fas fa-check"></i>
                            <span>İnsanı kuşatan tüm yönleriyle nitelikli bir eğitim sunan,</span>
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            <span>Bölge ve ülke ihtiyaçlarını da dikkate alarak AR-GE faaliyetleri yürüten,</span>
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            <span>Ürettiği bilgi ve sunduğu hizmetlerle bölge ve ülke düzeyinde sosyo-ekonomik
                                kalkınmayı ve yanı sıra girişimcilik ekosistemini destekleyen bir üniversite
                                olmaktır.</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
